{
  "name": "changes",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "release": "dotenv release-it --",
    "release:2": "set /p GITHUB_TOKEN=Enter your GitHub token: && set \"GITHUB_TOKEN=%GITHUB_TOKEN%\" && release-it",
    "commit": "cz",
    "release:beta": "dotenv release-it -- --preRelease=beta",
    "prepare": "husky install",
    "prettier": "prettier --write ."
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arufars/changes.git"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv-cli": "^7.0.0"
  },
  "release-it": {
    "git": {
      "changelog": "git fetch --all && git log --pretty=format:\"* %s (%h)\" `git describe --tags --abbrev=0`..HEAD",
      "commitMessage": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "tokenRef": "GITHUB_TOKENS"
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "### ‚ú® Features"
            },
            {
              "type": "fix",
              "section": "### üêõ Bug Fixes"
            },
            {
              "type": "chore",
              "hidden": true
            },
            {
              "type": "docs",
              "hidden": true
            },
            {
              "type": "style",
              "hidden": true
            },
            {
              "type": "refactor",
              "hidden": true
            },
            {
              "type": "perf",
              "hidden": true
            },
            {
              "type": "test",
              "hidden": true
            }
          ],
          "releaseCount": 1,
          "outputUnreleased": true,
          "whoCanContribute": "CONTRIBUTORS.md"
        },
        "contributors": true
      }
    }
  }
}
